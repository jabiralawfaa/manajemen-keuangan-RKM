    "migrate-and-seed": "node migrations/migrate-and-seed.js",
    "seed-additional-users": "node seeders/seed-additional-users.js",
    "test-db": "node -e \"require('./config/db').connectDB().then(() => console.log('DB Connection OK')).catch(e => console.error('DB Connection Error:', e.message))\"",
    "db-health": "node -e \"const DatabaseService = require('./services/databaseService'); DatabaseService.healthCheck().then(console.log).catch(console.error);\"",
    "list-users": "node -e \"const { getAllUsers } = require('./utils/helpers/userInfo'); getAllUsers().then(users => { console.log('Daftar Akun:'); users.forEach(user => console.log(`- ${user.username} (${user.role}) - ${user.name}`)); }).catch(console.error);\"",
    "user-stats": "node -e \"const { getUserCountByRole } = require('./utils/helpers/userInfo'); getUserCountByRole().then(counts => { console.log('Statistik Pengguna:'); for (const [role, count] of Object.entries(counts)) { console.log(`- ${role}: ${count}`); } }).catch(console.error);\"",
    "test-get": "node tests/unit/test-all-get-endpoints.js",
    "test-post": "node tests/integration/test-post-endpoints.js",
    "test-post-comprehensive": "node tests/e2e/test-post-endpoints-comprehensive.js",
    "test-put": "node tests/integration/test-put-endpoints.js",
    "test-put-comprehensive": "node tests/e2e/test-put-endpoints-comprehensive.js",
    "test-put-members": "node tests/integration/test-put-members.js",
    "test-put-payments": "node tests/integration/test-put-payments.js",
    "test-put-expenses": "node tests/integration/test-put-expenses.js",
    "test-put-change-password": "node tests/integration/test-put-change-password.js",
    "test-delete": "node tests/integration/test-delete-endpoints.js",
    "test-delete-comprehensive": "node tests/e2e/test-delete-comprehensive-final.js",
    "test-delete-access-control": "node tests/integration/test-delete-access-control.js",
    "test-delete-functionality": "node tests/unit/test-delete-functionality.js",
    "test-unit": "node tests/unit/*.js",
    "test-integration": "node tests/integration/*.js",
    "test-e2e": "node tests/e2e/*.js",
    "test-all": "npm run test-unit && npm run test-integration && npm run test-e2e",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
